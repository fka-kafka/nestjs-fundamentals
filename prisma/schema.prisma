generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Employee {
  id          String         @id         @default(uuid())         @db.Uuid
  name        String
  email       String         @unique
  role        Role
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

enum Role {
  ADMIN
  ENGINEER
  INTERN
}